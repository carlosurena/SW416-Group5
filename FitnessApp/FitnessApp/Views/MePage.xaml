<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="FitnessApp.MePage" 
    xmlns:common="clr-namespace:FitnessApp"
    Title="{Binding Title}">

    <ContentPage.ToolbarItems>     
        <ToolbarItem Text="About" Clicked="About_Clicked" />
    </ContentPage.ToolbarItems>

    <StackLayout>
        <StackLayout Padding="10" Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Progress" Clicked="Progress_Clicked" TextColor="White" FontSize="15"  BackgroundColor="#2cb3f7" WidthRequest="100"></Button>
            <Button Text="Protected" Clicked="Protected_Clicked" TextColor="White" FontSize="15"  BackgroundColor="#2cb3f7" WidthRequest="100"></Button>

        </StackLayout>
        <common:ProgressPage x:Name="ProgressPage" IsVisible="true"></common:ProgressPage>
        <common:ProtectedPage x:Name="ProtectedPage" IsVisible="false"></common:ProtectedPage>
    </StackLayout>

</ContentPage>