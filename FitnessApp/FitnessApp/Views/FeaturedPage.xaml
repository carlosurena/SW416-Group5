             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessApp.FeaturedPage">
        <StackLayout 

             Orientation="Vertical"
             HorizontalOptions="FillAndExpand" Padding="10" BackgroundColor="White">

          <Label Text="Featured Workouts" FontSize="28" HorizontalOptions="Center" FontAttributes="Bold" />
          <BoxView BackgroundColor="black" HeightRequest="200" WidthRequest="100" />
          <BoxView BackgroundColor="red" HeightRequest="200" WidthRequest="100" />
          <BoxView BackgroundColor="orange" HeightRequest="200" WidthRequest="100" />

    
</StackLayout>
    </ScrollView>
