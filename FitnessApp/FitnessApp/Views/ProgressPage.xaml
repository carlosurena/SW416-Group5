<?xml version="1.0" encoding="utf-8" ?>

<ScrollView
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessApp.ProgressPage">

    <StackLayout Orientation="Vertical"
                 HorizontalOptions="FillAndExpand" 
                 Padding="10" BackgroundColor="White">

        <Label Text="Sarah Kurtz" FontSize="28" HorizontalOptions="Center" FontAttributes="Bold" />
        <Label Text="Profile" FontSize="20" HorizontalOptions="Center" />

        <StackLayout  Orientation="Vertical" Padding="0,0,0,10">
            <Label 
                Text="Sex:" FontSize="20" 
                HorizontalOptions="Start"
                VerticalOptions="Center"/>
            <Entry HorizontalOptions="FillAndExpand"
                   Text="Female"/> 
            <Label 
                Text="Age:" FontSize="20" 
                HorizontalOptions="Start"
                VerticalOptions="Center"/>
            <Entry HorizontalOptions="FillAndExpand"
                   Text="21"/>
        </StackLayout>

        <StackLayout Orientation="Vertical" HeightRequest="200">
            <Label Text="Progress" FontSize="20" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </StackLayout>
</ScrollView>


